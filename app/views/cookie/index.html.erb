<%= javascript_import_module_tag "live" %>

<div class="all" onclick="live.forward('cookie', {type: 'click', clientX: event.clientX, clientY: event.clientY});">
  <h1>Cookie Clicker Inspired</h1>
  <table>
    <tr>
      <td class="cookie">
        🍪
      </td>
      <td class="menu">
        <%= @tag.to_html %>
        <div class="shop">
          <h2>Shop</h2>
          <div class="item" onclick="live.forward('buy', {type: 'click', item: 'cursor'});">
            <p>
            Cursor: <span class="price">10</span>
            </p>
            <input type="submit" value="Buy (cost: 1)" onclick="live.forward('buy', {type: 'click', item: 'cursor'});">
          </div>
        </div>
      </td>
    </tr>
  </table>
</div>
